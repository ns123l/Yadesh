<% layout('pages/boilerplate') %>
<body>
    <h1>All Listing</h1>
   
    
   
        <div class="row row-col-lg-3 row-col-md-3 row-col-sm-1">
            <%for(let list of allList){ %>
            <div class="card  " style="width: 20rem;">
               <a href="/listing/<%=list._id%>" class="listing-link "> <img src="<%=list.image.url%>" class="card-img-top" alt="listing_image" style="height: 18rem;">
                <div class="card-img-overlay">listings</div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= list.title %> <br></b>
                        &#8377;<%= list.price ? list.price.toLocaleString("en-IN") : 'N/A' %>
                    </p>
                </div></a>
              </div>
              <%}%>
        </div>
        

        

            
    
</body>
